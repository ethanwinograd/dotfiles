" Keep backup and temp files in one place
set backup
set backupdir=~/.vim/backup
set directory=~/.vim/tmp

" Make vim brighten up text for a dark background
set background=dark

" Stop those error bells!
set noerrorbells
set visualbell
set t_vb=

" highlight search
set hlsearch

set tabstop=2


"make arrow keys work
set nocp
